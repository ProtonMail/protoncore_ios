use_frameworks!

install! 'cocoapods', :warn_for_unused_master_specs_repo => false

def proton_url
  'git@' + ENV["PROTON_GIT_URL"]
end

def protoncore_dependencies
  pod 'TrustKit', :git=> 'https://github.com/ProtonMail/TrustKit.git', :branch => 'master', :inhibit_warnings => true
  
  pod 'OHHTTPStubs/Swift'
  pod 'TPInAppReceipt'
end

def protoncore_ios_pods
  pod 'ProtonCore-AccountDeletion/UsingCrypto+Alamofire', :path => '../'
  pod 'ProtonCore-AccountSwitcher', :path => '../'
  pod 'ProtonCore-APIClient', :subspecs => ['Alamofire'], :path => '../'
  pod 'ProtonCore-Authentication-KeyGeneration/UsingCrypto+Alamofire', :path => '../'
  pod 'ProtonCore-Authentication/UsingCrypto+Alamofire', :path => '../'
