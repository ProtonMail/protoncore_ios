  pod 'ProtonCore-Services', :subspecs => ['Alamofire'], :path => '../'
  pod 'ProtonCore-Settings', :path => '../'
  pod 'ProtonCore-UIFoundations', :path => '../'
  pod 'ProtonCore-Utilities', :path => '../'
  pod 'ProtonCore-VCard', :path => '../'
end

def protoncore_unit_tests
