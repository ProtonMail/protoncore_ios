target 'Example-iOS-ProtonCore-NoIAP' do
  protoncore_dependencies
  all_protoncore_pods
end

target 'Example-iOS-Mail-AppStoreIAP' do
  protoncore_dependencies
  all_protoncore_pods
end

target 'Example-iOS-Mail-LocalIAP' do
  protoncore_dependencies
