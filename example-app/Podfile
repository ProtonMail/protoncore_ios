  pod 'ProtonCore-Authentication/UsingCryptoVPN', :path => '../'
  pod 'ProtonCore-Authentication-KeyGeneration/UsingCryptoVPN', :path => '../'
  pod 'ProtonCore-Features/UsingCryptoVPN', :path => '../'
  pod 'ProtonCore-Keymaker/UsingCryptoVPN', :path => '../'
  pod 'ProtonCore-KeyManager/UsingCryptoVPN', :path => '../'
  pod 'ProtonCore-Login/UsingCryptoVPN', :path => '../'
  pod 'ProtonCore-Payments/UsingCryptoVPN', :path => '../'
