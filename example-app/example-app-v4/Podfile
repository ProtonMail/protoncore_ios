abstract_target 'macOS' do
  platform :osx, '10.13'

  target 'Example-macOS-ProtonCore-V4' do
    project "ExampleApp-V4.xcodeproj"

    protoncore_dependencies
    protoncore_macos_all_versions
    protoncore_macos_v4
  end

  target 'Example-macOS-Mail-V4' do
    project "ExampleApp-V4.xcodeproj"

    protoncore_dependencies
    protoncore_macos_all_versions
    protoncore_macos_v4
  end

  target 'Example-macOS-VPN-V4' do
    project "ExampleApp-V4.xcodeproj"

    protoncore_dependencies
    protoncore_macos_all_versions
    protoncore_macos_v4
  end
  
  target 'Example-macOS-Calendar-V4' do
    project "ExampleApp-V4.xcodeproj"

    protoncore_dependencies
    protoncore_macos_all_versions
    protoncore_macos_v4
  end

  target 'Example-macOS-Drive-V4' do
    project "ExampleApp-V4.xcodeproj"

    protoncore_dependencies
    protoncore_macos_all_versions
    protoncore_macos_v4
  end

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '11.0'
      config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '10.13'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      if config.name == 'Debug'
        config.build_settings['SWIFT_ACTIVE_COMPILATION_CONDITIONS'] = '$(inherited) DEBUG_CORE_INTERNALS'
      end
    end
  end
end

